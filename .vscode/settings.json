{
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [
    {
      "pattern": "src",
      "rootDir": "src"
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules/**": true,
    "**/target/**": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/target/**": true

  }
}